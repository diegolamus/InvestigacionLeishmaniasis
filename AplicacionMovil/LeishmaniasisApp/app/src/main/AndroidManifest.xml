<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.icesi.leishmaniasisapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lc_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Inicio"
            android:configChanges="orientation|screenSize">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Instrucciones" />
        <activity android:name=".TomarFoto" />
        <activity android:name=".SeleccionarFoto"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".AlbumActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".GalleryPreview"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".MostrarResultados"></activity>

    </application>

</manifest>